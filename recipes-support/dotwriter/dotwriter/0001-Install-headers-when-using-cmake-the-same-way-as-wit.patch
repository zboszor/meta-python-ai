---
 CMakeLists.txt | 18 +++++++++++++++++-
 1 file changed, 17 insertions(+), 1 deletion(-)

diff --git a/CMakeLists.txt b/CMakeLists.txt
index fad4d56..388d005 100644
--- a/CMakeLists.txt
+++ b/CMakeLists.txt
@@ -16,9 +16,25 @@ set(FILES
     "lib/Util.cpp"
 )
 
+set(HEADERS
+    "lib/Attribute.h"
+    "lib/AttributeSet.h"
+    "lib/Cluster.h"
+    "lib/DotWriter.h"
+    "lib/Edge.h"
+    "lib/Enums.h"
+    "lib/Graph.h"
+    "lib/Idable.h"
+    "lib/IdManager.h"
+    "lib/Node.h"
+    "lib/RootGraph.h"
+    "lib/Subgraph.h"
+    "lib/Util.h"
+)
+
 add_library(${PROJECT_NAME} STATIC ${FILES})
 set_target_properties(${PROJECT_NAME} PROPERTIES
-    PUBLIC_HEADER "lib/DotWriter.h"
+    PUBLIC_HEADER "${HEADERS}"
     OUTPUT_NAME "dotwriter"
     CXX_STANDARD              14
     CXX_STANDARD_REQUIRED     YES
